@{
    ViewData["Title"] = "Home Page";
}
<div class="m-12 text-center" style="padding: 19rem;">
    <h2 class="display-4" style="color: var(--primary-color);">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area - you can manage all <b>Events</b>, <b>Teams</b>,
        <b>Reviews</b> and <b>Users</b> here.
        <br/>You can <b>rent</b> and <b>leave</b> the free ones, too!
    </p>
    
    <hr class="my-4">
     
    <a asp-area="Administration" asp-controller="Event" asp-action="All"
       class="btn btn-primary btn-lg">
        Manage Events
    </a>
    <span> | </span>
    <a asp-area="Administration" asp-controller="Team" asp-action="All"
       class="btn btn-primary btn-lg">
        Manage Teams
    </a>
    <span> | </span>
        <a asp-area="Administration" asp-controller="User" asp-action="All"
           class="btn btn-primary btn-lg">
             Manage Users
        </a>
    
</div>