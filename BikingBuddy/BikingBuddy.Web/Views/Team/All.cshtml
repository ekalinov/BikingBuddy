@model ICollection<AllTeamsViewModel>
@{
    ViewBag.Title = "All Teams";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">

    @if (!Model.Any())
    {
        <h5 class="alert-danger">There is no Teams added!</h5>
    }
    else
    {
        
                
                <table class="table align-middle mb-0 bg-white">
                    <thead class="bg-light">
                    <tr>
                        <th>Team Name</th>
                        <th>Country</th>
                        <th>Members Count</th>
                        <th>Options</th>
                    </tr>
                    </thead>
                    <tbody>

                    @foreach (var team in Model)
                    {

                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                        <img src=@team.TeamImageUrl
                                         alt=""
                                         style="width: 45px; height: 45px"
                                         class="rounded-circle" />
                                    <div class="ms-3">
                                        <p class="fw-bold mb-1">@team.Name</p>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <p class="fw-normal mb-1">@team.Country</p>
                            </td>

                            <td>
                                <p class="text-muted mb-0">@team.TeamMembersCount</p>
                            </td>

                            <td>
                                <a asp-controller="Team" asp-action="Details" asp-route-teamId="@team.Id" class="btn btn-warning btn-rounded">Details</a>
                            </td>
                        </tr>
                    }


                    </tbody>
                </table>


