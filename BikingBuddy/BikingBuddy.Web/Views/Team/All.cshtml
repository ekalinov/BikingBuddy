@model ICollection<TeamViewModel>
@{
    ViewBag.Title = "All Teams";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">

    @if (!Model.Any())
    {
        <h5 class="alert-danger">There is no Teams added!</h5>
    }
    else
    {
        @foreach (var e in Model)
        {
            <div class="card col-4" style="width: 20rem;">
                <img class="card-img-top" style="width: 18rem;"
             src="@e.TeamImageUrl" alt="Book Image">
                <div class="card-body">

                    <h5 class="card-title mt-1">@e.Name</h5>
                    <p class="mb-0">Established on: @e.EstablishedOn</p>
                    <p class="mb-0">Members Count: @e.TeamMembers.Count()</p>
                    <p class="mb-0">Team Manager: @e.TeamManager</p>
                    \
                 
                </div>

                
                <table class="table align-middle mb-0 bg-white">
                    <thead class="bg-light">
                    <tr>
                        <th>Team Name</th>
                        <th>Established on</th>
                        <th>Members Count</th>
                    </tr>
                    </thead>
                    <tbody>

                    @foreach (var team in Model)
                    {

                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                        <img src=@team.TeamImageUrl
                                         alt=""
                                         style="width: 45px; height: 45px"
                                         class="rounded-circle" />
                                    <div class="ms-3">
                                        <p class="fw-bold mb-1">@team.Name</p>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <p class="fw-normal mb-1">@team.EstablishedOn</p>
                                <p class="text-muted mb-0">@team.TeamMembers.Count</p>
                            </td>

                            <td>
                                <button type="submit" class="btn btn-warning btn-rounded" name="commentBodyToEdit" value=@team.Id>
                                    Team details
                                </button>
                                <a asp-controller="Team" asp-action="Details" asp-route-teamId="@e.Id" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Details</a>
                            </td>
                        </tr>
                    }


                    </tbody>
                </table>


@*
                <a asp-controller="Event" asp-action="Details" asp-route-eventId="@e.Id" class="btn btn-warning mb-2 w-100 p-3 fw-bold">View Details</a>
                @if (User.Identity?.Name == e.OrganizerUsername)
                {
                    <a asp-controller="Event" asp-action="Edit" asp-route-eventId="@e.Id" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Edit</a>
                }
                else
                {
                    <form class="input-group-sm " asp-controller="Event" asp-action="Join" asp-route-eventId="@e.Id">
                        <input type="submit" value="Join the Event" class="fs-6 btn btn-warning mb-3 w-100 p-3 fw-bold" />
                    </form>
                }*@
            </div>
        }

    }
    
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}