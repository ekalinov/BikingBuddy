@model IEnumerable<EventViewModel> 

<table class="table table-bordered table-dark">
    <thead>
    <tr>
        <th>
            <label>Event</label>
        </th>
        <th>
            <label>Date</label>
        </th>
        <th>
            <label>Location</label>
        </th>
        <th>
            <label>Distance/Acsent </label>
        </th>
        <th>
            <label>Description</label>
        </th>
        <th>
            <label>Manage</label>
        </th>

    </tr>
    </thead>
    <tbody>
    @foreach (var curEvent in Model)
    {
        <tr>
            <td>
                <div class="d-flex align-items-center">
                    <img src=@curEvent.EventImageUrl
                         alt=""
                         style="width: 50px; height: 50px"
                         class="rounded-circle"/>
                </div>
                <label>@curEvent.Title</label>
            </td>
            <td>
                <label>@curEvent.Date</label>
            </td>
            <td>
                <label>@curEvent.Country</label>,
                <label>@curEvent.Town</label>
            </td>

            <td>
                <label>@curEvent.OrganizerUsername</label>
            </td>
            <td>
                <label> Dist:@curEvent.Distance</label> <label>Asc: @curEvent.Ascent</label>
            </td>
            <td>
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Modal_@curEvent.Id">
                    Description
                </button>

                <!-- Modal -->
                <div class="modal fade" id="Modal_@curEvent.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-scrollable" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" style="color: black;" id="exampleModalLongTitle">Modal title</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                @curEvent.Description
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                            </div>
                        </div>
                    </div>
                </div>
            </td>
            <td>
                @if (DateTime.Parse(curEvent.Date) < DateTime.Today.Date)
                {
                    <a asp-area="" asp-controller="Event" asp-action="CompleteEvent" class="btn btn-warning mb-2" asp-route-eventId="@curEvent.Id">âœ” Complete</a>
                }
                else
                {
                    <a asp-area="" asp-controller="Event" asp-action="Leave" class="btn btn-warning mb-2" asp-route-eventId="@curEvent.Id">ðŸ—™ Leave </a>
                }
            </td>

        </tr>
    }
    </tbody>
</table>