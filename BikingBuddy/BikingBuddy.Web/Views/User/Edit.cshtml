@model EditUserViewModel
@{
    ViewBag.Title = $"Edit Team {Model.Name}";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr/>

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Edit" method="post">


            <div class="mb-3">
                <label asp-for="@Model.Helmet" class="form-label-add-edit">Helmet</label>
                <input asp-for="@Model.Helmet" class="form-control" aria-required="true" rows="5"/>
                <span asp-validation-for="Helmet" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Shoes" class="form-label-add-edit">Shoes</label>
                <input asp-for="@Model.Shoes" class="form-control" aria-required="true"/>
                <span asp-validation-for="@Model.Shoes" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.CountriesCollection" class="form-label-add-edit">Country</label>
                <select asp-for="@Model.CountryId" class="form-control" aria-required="true">
                    @foreach (var type in Model.CountriesCollection)
                    {
                        <option value="@type.Id">@type.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.CountryId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Town" class="form-label-add-edit">Town</label>
                <input asp-for="@Model.Town" class="form-control" aria-required="true"/>
                <span asp-validation-for="@Model.Town" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ProfileImageUrl" class="form-label-add-edit"> Profile Image URL</label>
                <input asp-for="@Model.ProfileImageUrl" class="form-control" aria-required="true"/>
                <span asp-validation-for="@Model.ProfileImageUrl" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" asp-route-Id="@Model.Id" type="submit" value="Comfirm Changes"/>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}