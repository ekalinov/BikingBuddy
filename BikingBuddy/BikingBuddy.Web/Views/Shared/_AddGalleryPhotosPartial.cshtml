@model AddGalleryPhotoModel


<form asp-action="Add" asp-controller="GalleryPhotos" enctype="multipart/form-data" method="post" asp-area="">
    <div class="mb-3">
        <label asp-for="@Model.EventName" class="form-label-add-edit">@Model.EventName</label>
    </div>
    <div class="mb-3">

        <label class="form-label-add-edit">Select Photos for your Event Gallery <span class="font-italic">(.jpg, .jpeg, .png)</span></label>
        <div class="custom-file">
            <input asp-for="@Model.GalleryPhotos" class="custom-file-input" id="inputGroupFile03" aria-describedby="inputGroupFileAddon01"/>
            <label class="custom-file-label">Choose files</label>
        </div>


        <script>
                                                                                      $('#inputGroupFile03').on('change',function(){
                                                                                          //get the file name
                                                                                          var fileName = $(this).val();
                                                                                          //replace the "Choose a file" label
                                                                                          $(this).next('.custom-file-label').html(fileName);
                                                                                      })
                                                                           </script>
    </div>

    <input type="hidden" asp-for="@Model.EventId" class="form-control" value="@Model.EventId"/>
    
    <input type="hidden" asp-for="@Model.EventName" class="form-control" value="@Model.EventName"/>
    <div class="mb-3">
        <input class="btn btn-warning mb-2 w-100 p-3 fw-bold"
               type="submit" 
               value="Add"/>
    </div>
</form>