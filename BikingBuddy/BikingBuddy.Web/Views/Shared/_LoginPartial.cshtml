@using Microsoft.AspNetCore.Identity
@using BikingBuddy.Data.Models
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav" style="font-size: 25px;
                                  font-weight: 600;">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <i style="color: coral" class="fas fa-user"></i>
            <a class="nav-link  " asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello, @User.Identity?.Name!</a>
        </li>
        <li class="nav-item" style="
                                 color: var(--primary-color);
                             ">
            <form class="form-inline nav-link" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link ">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item nav-link" style="  color: var(--primary-color); ">
            <a class="loginButtons"  asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item nav-link">
            <a class="loginButtons" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>