@model ICollection<CommentViewModel>

<table class="table align-middle mb-0 bg-white">
    <thead class="bg-light">
        <tr>
            <th>Name</th>
            <th>Comment</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var c in Model)
        {

            <tr>
                <td>
                    <div class="d-flex align-items-center">
                        <img src=@c.UserImageURL
                         alt=""
                         style="width: 45px; height: 45px"
                         class="rounded-circle" />
                        <div class="ms-3">
                            <p class="fw-bold mb-1">@c.UserName</p>
                        </div>
                    </div>
                </td>
                <td>
                    <p class="fw-normal mb-1">@c.CommentBody</p>
                    <p class="text-muted mb-0">@c.CreatedOn</p>
                </td>

                <td>
                    <button type="submit" class="btn btn-warning btn-rounded" name="commentBodyToEdit" value=@c.Id>
                        Edit
                    </button>
                    
                </td>
            </tr>
        }


    </tbody>
</table>


